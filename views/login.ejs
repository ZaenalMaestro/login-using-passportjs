<h1>Login</h1>
<% if (messages.error) { %>
  <%= messages.error %>
<% } %>

<% if (typeof message !== 'undefined') { %>
  <%= message %>
<% } %>
<form action="/login" method="POST">
  <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" value="<%if (typeof oldEmail !== 'undefined') {%><%=oldEmail%><% }%>" required>
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" id="password" name="password" value="<%if (typeof oldPassword !== 'undefined') {%><%=oldPassword%><% }%>" required>
  </div>
  <button type="submit">Login</button>
</form>
<a href="/register">Register</a>